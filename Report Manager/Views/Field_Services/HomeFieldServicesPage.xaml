<Page
    x:Class="Report_Manager.Views.HomeFieldServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
    <Border VerticalAlignment="Top" HorizontalAlignment="Right" Translation="0,0,15" Width="300" Height="100" CornerRadius="10" BorderThickness="1" BorderBrush="{ThemeResource TabViewSelectedItemBorderBrush}">
        <TextBlock Text="$106.109,65" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="46" IsTextSelectionEnabled="True" Foreground="Green"/>
        <Border.Background>
            <SolidColorBrush Color="{ThemeResource CardBackgroundFillColorDefault}" Opacity="1"/>
        </Border.Background>
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>
    </Border>
    
    </Grid>
</Page>
